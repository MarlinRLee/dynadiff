{
  "train_batch_size": 320,
  "train_micro_batch_size_per_gpu": 40,
  "gradient_accumulation_steps": 4,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 1e-3,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "scheduler": {
    "type": "WarmupCosineLR",
    "params": {
      "warmup_min_lr": 0,
      "warmup_max_lr": 1e-3,
      "warmup_num_steps": 1000,
      "total_num_steps": 60000
    }
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "initial_scale_power": 16,
    "loss_scale_window": 1000,
    "hysteresis": 2,
    "min_loss_scale": 1
  },
  "zero_optimization": {
    "stage": 2,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    },
    "contiguous_gradients": true,
    "overlap_comm": true
  },
  "flops_profiler": {
    "enabled": false,
    "consider_complexity": false,
    "module_depth": -1,
    "top_modules": 1,
    "detailed": true,
    "periodic_profile": true,
    "exclude_layers": ["_norm"]
  },
  "wandb": {
    "enabled": true,
    "project": "versatile-diffusion-fmri"
  }
}